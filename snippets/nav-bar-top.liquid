<div class="navbar md-whiteframe-z1 no-radius grey-800">
    <!-- Open side - Naviation on mobile -->
    <a md-ink-ripple data-toggle="modal" data-target="#aside" class="navbar-item pull-left visible-xs visible-sm"><i class="mdi-navigation-menu i-24"></i></a>
    <!-- / -->
    <!-- Page title - Bind to $state's title -->
    <div class="navbar-item pull-left h4 hidden-xs">{{ page_title }}</div>
    <!-- / -->
    <!-- Common tools -->
    <ul class="nav navbar-tool pull-right">
        <li>
            <a md-ink-ripple ui-toggle-class="show" target="#search"> <i class="mdi-action-search i-24"></i> </a>
        </li>
        <li>
            <a md-ink-ripple data-toggle="modal" data-target="#user"> <i class="fa fa-shopping-cart"></i> (<span class="cart">{{ cart.item_count }}</span>) </a>
        </li>
        <li class="dropdown">
            <a md-ink-ripple data-toggle="dropdown"> <i class="mdi-navigation-more-vert i-24"></i> </a>
            <ul class="dropdown-menu dropdown-menu-scale pull-right pull-up text-color">
                <li><a href>Single-column view</a>
                </li>
                <li><a href>Sort by date</a>
                </li>
                <li>
                    {{ 'Log out' | customer_logout_link }}
                </li>
                <li class="divider"></li>
                <li><a href>Help &amp; feedback</a>
                </li>
            </ul>
        </li>
    </ul>
    <div class="pull-right" ui-view="navbar@"></div>
    <!-- / -->
    <!-- Search form -->
    <div id="search" class="pos-abt w-full h-full blue-grey hide">
        <div class="box">
            <div class="box-col w-56 text-center">
                <!-- hide search form -->
                <a md-ink-ripple class="navbar-item inline" ui-toggle-class="show" target="#search"><i class="mdi-navigation-arrow-back i-24"></i></a> </div>
            <div class="box-col v-m">
                <!-- bind to app.search.content -->
                <form action='/search'>
                    <input name="q" class="form-control input-lg no-bg no-border white" placeholder="Search" ng-model="app.search.content">
                </form>
            </div>
            <div class="box-col w-56 text-center"> <a md-ink-ripple class="navbar-item inline"><i class="mdi-av-mic i-24"></i></a> </div>
        </div>
    </div>
    <!-- / -->
</div>


<!-- Mini Cart -->
<div class="modal fade" data-backdrop="false" id="user" style="display: none;">
    <div class="right w-xl bg-white md-whiteframe-z2">
        <div class="box">
            <div class="p-h-md p-v">
                <h4 class="mini_cart_exit">
                <a href="javascript:void(0);" class="btn btn-secondary" data-dismiss="modal">&#x2190; Keep Shopping</a>
                <a data-dismiss="modal" class="pull-right text-muted-lt text-2x m-t-n inline p-sm">Ã—</a>
              </h4>
                <div class="summary">
                    <p class="total">
                        <span class="label" style="color:#000">{{ cart.item_count }} Items Total:</span>
                        <span class="price">{{cart.total_price | money}}</span>
                    </p>
                </div>
            </div>


            <div class="p p-h-md">

            </div>
            <div class="box-row">
                <div class="box-cell">
                    <div class="box-inner">
                        <div class="list-group no-radius no-borders">
                            {% include 'quick-cart-offcanvas' %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="p-h-md p-v">
                <h4 class="text-cart"><a class="btn pink btn-md" href="/cart">View Cart &#x2192;</a></h4>
            </div>
        </div>

    </div>
</div>
<!--./ Mini Cart -->