<header class="page-header">
  <h1>Your Account <small>Reset Password</small></h1>
</header>

<!-- Reset Password Form -->
<div class="row">
  <div class="col-md-4">

    {% form 'reset_customer_password' %}

      <span class="help-block">Enter a new password for {{email}}.</span>

      <!-- Display any reset errors. -->
      {% if form.errors %}
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h3 class="panel-title">Error resetting password.</h3>
        </div>
        <div class="panel-body">
          <p>There was a problem resetting your password.</p>
          <p>Please check that you typed your new password correctly both times.</p>
        </div>      
      </div>
      {% endif %}

      <div class="form-group">
        <label for="customer[password]">New Password</label>
        <input type="password" class="form-control" id="customer[password]" name="customer[password]" value="" />
      </div>

      <div class="form-group">
        <label for="customer[password_confirmation]">Confirm New Password</label>
        <input type="password" class="form-control" id="customer[password_confirmation]" name="customer[password_confirmation]" />
      </div>

      <div class="form-group">
        <button type="submit" class="btn btn-lg btn-primary btn-block">Reset Password</button>
      </div>

      <hr />
      <p class="text-center">
        {{ 'Return to Login' | customer_login_link }}
      </p>
    {% endform %}

  </div>
</div>