
.circle_pic img {
	padding: 3px;
	background-color: #fcfcfc;
	border: 1px solid silver;
}

div.circle_pic img:hover {
	-moz-box-shadow: 0 0 5px rgba(0,0,0,0.5);
	-webkit-box-shadow: 0 0 5px rgba(0,0,0,0.5);
	box-shadow: 0 0 5px rgba(0,0,0,0.5);
}

.mini_cart_des { text-align: right; }

.cart-collateral span { font-size: 18px; }

.in-stock-modal { font-size: 16px !important; }
.in-stock-modal { font-size: 12px; border-radius: 3px; }

.form-group input { border-radius: 3px; }

/* hovers everywhere! */
.in-stock-modal:hover { color: #dd4193; }
.form-group button:hover { color: #90e06d; }
.pager a:hover { color: #dd4193; }
.box a:hover { color: #dd4193; }
.text-cart a:hover { color: #a2ea81; }

